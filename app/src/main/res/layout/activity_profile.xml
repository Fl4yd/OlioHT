<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:layout_editor_absoluteX="56dp"
    tools:layout_editor_absoluteY="26dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        tools:context=".ProfileActivity">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="313dp"
            android:layout_height="218dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.36"
            app:srcCompat="@drawable/profile_taustanelio_bg" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="244dp"
            android:layout_height="53dp"
            android:layout_marginRight="1500dp"
            app:layout_constraintBottom_toBottomOf="@+id/theatreSpinner"
            app:layout_constraintEnd_toEndOf="@id/theatreSpinner"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="@id/theatreSpinner"
            app:layout_constraintTop_toTopOf="@+id/theatreSpinner"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dropdownmenubackground" />

        <Spinner
            android:id="@+id/theatreSpinner"
            android:layout_width="192dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/black"
            android:entries="@array/Theatres_spinner"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintVertical_bias="0.193" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/user_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.618"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.431" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/user_age"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.618"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.787" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginRight="30dp"
            android:text="@string/user_theatre"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.384" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:text="@string/user_age_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintLeft_toLeftOf="@id/textView5"
            app:layout_constraintRight_toLeftOf="@id/textView6"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.744" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:text="@string/user_theatre_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.153"
            app:layout_constraintLeft_toLeftOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="@id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.412" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/user_name_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.088"
            app:layout_constraintLeft_toLeftOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.542" />

        <Button
            android:id="@+id/updateButton"
            android:layout_width="113dp"
            android:layout_height="59dp"
            android:backgroundTint="@color/yellow_200"
            android:onClick="buttonpress"
            android:text="Update"
            app:layout_constraintBottom_toTopOf="@id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintVertical_bias="0.2" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="403dp"
            android:layout_height="312dp"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView5"
            app:layout_constraintVertical_bias="0.99"
            app:srcCompat="@drawable/finnkino_logo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#ffc800"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/theatreSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>