<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    tools:layout_editor_absoluteX="56dp"
    tools:layout_editor_absoluteY="26dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_background"
        tools:context=".ProfileActivity">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="218dp"
            app:layout_constraintBottom_toTopOf="@+id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.071"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.36"
            app:srcCompat="@drawable/profile_taustanelio_bg" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="300dp"
            android:layout_height="53dp"
            app:layout_constraintBottom_toBottomOf="@+id/theatreSpinner"
            app:layout_constraintEnd_toEndOf="@id/theatreSpinner"
            app:layout_constraintHorizontal_bias="0.023"
            app:layout_constraintStart_toStartOf="@id/theatreSpinner"
            app:layout_constraintTop_toTopOf="@+id/theatreSpinner"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/dropdownmenubackground" />

        <Spinner
            android:id="@+id/theatreSpinner"
            android:layout_width="300dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/black"
            android:textSize="20sp"
            android:popupBackground="@color/yellow_200"
            app:layout_constraintBottom_toTopOf="@id/imageView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.50"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView7"
            app:layout_constraintVertical_bias="0.193" />


        <TextView
            android:id="@+id/nameField"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/user_name"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/ageField"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintVertical_bias="0.605" />

        <TextView
            android:id="@+id/ageField"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/user_age"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.739" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="147dp"
            android:layout_height="48dp"
            android:text="@string/user_theatre"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/ageField"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.561"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.505" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:layout_marginStart="28dp"
            android:text="@string/user_age_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintLeft_toLeftOf="@id/nameField"
            app:layout_constraintRight_toLeftOf="@id/ageField"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.739" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:text="@string/user_theatre_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="@id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.412" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="131dp"
            android:layout_height="30dp"
            android:text="@string/user_name_label"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintLeft_toLeftOf="@id/imageView5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.558" />



        <ImageView
            android:id="@+id/logo"
            android:layout_width="403dp"
            android:layout_height="312dp"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView5"
            app:layout_constraintVertical_bias="0.99"
            app:srcCompat="@drawable/finnkino_logo" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="300dp"
            android:layout_height="54dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="#ffc800"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/theatreSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.062" />

        <Button
            android:id="@+id/movie_history_btn"
            android:layout_width="224dp"
            android:layout_height="58dp"
            android:backgroundTint="@color/yellow_200"
            android:text="Movie History"
            app:layout_constraintBottom_toTopOf="@id/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>