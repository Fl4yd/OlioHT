<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">


    <TextView
        android:id="@+id/movie_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAlignment="center"
        android:autoSizeMaxTextSize="25dp"
        android:autoSizeTextType="uniform"
        android:maxLines="3"
        android:text="Movie name"
        android:textColor="@color/yellow_200"
        android:textStyle="bold"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


    <TextView
        android:id="@+id/movieAgeLimit"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="20dp"
        app:flow_horizontalBias="0."
        android:text="AgeLimit:"
        android:textColor="@color/yellow_200"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toTopOf="@+id/movieYear"
        app:layout_constraintEnd_toStartOf="@id/ageLimit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:layout_constraintVertical_bias="0.223" />

    <TextView
        android:id="@+id/movieDuration"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginBottom="20dp"
        android:text="Duration:"
        android:textColor="@color/yellow_200"
        app:layout_constraintBottom_toTopOf="@id/movieActor"
        app:layout_constraintEnd_toStartOf="@id/duration"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieYear"
        app:layout_constraintVertical_bias="0.166" />

    <TextView
        android:id="@+id/movieYear"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:text="yearActors:"
        android:layout_marginBottom="20dp"
        android:textColor="@color/yellow_200"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintBottom_toTopOf="@id/movieDuration"
        app:layout_constraintEnd_toStartOf="@id/productionYear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieAgeLimit"
        app:layout_constraintVertical_bias="0.132" />


    <TextView
        android:id="@+id/movieProducer"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginTop="60dp"
        android:text="Producers:"
        android:textColor="@color/yellow_200"
        app:layout_constraintEnd_toStartOf="@+id/actors"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieActor" />

    <TextView
        android:id="@+id/movieActor"
        android:layout_width="70dp"
        android:layout_height="22dp"
        android:layout_marginBottom="20dp"
        android:text="Actors:"
        android:textColor="@color/yellow_200"
        app:layout_constraintBottom_toTopOf="@id/movieProducer"
        app:layout_constraintEnd_toStartOf="@id/actors"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movieDuration"
        app:layout_constraintVertical_bias="0.443" />

    <TextView
        android:id="@+id/movieReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textColor="@color/yellow_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        tools:textAlignment="center" />

    <TextView
        android:id="@+id/ageLimit"
        android:layout_width="107dp"
        android:layout_height="22dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="36dp"
        android:text="@string/age_limit"
        android:textColor="@color/yellow_200"
        app:layout_constraintBottom_toTopOf="@+id/productionYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movie_name"
        app:layout_constraintVertical_bias="0.657" />

    <TextView
        android:id="@+id/productionYear"
        android:layout_width="107dp"
        android:layout_height="22dp"
        android:text="@string/production_year"
        android:textColor="@color/yellow_200"
        android:layout_marginBottom="20dp"

        app:layout_constraintBottom_toTopOf="@+id/duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ageLimit"
        app:layout_constraintVertical_bias="0.458" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="107dp"
        android:layout_height="22dp"
        android:text="@string/duration"
        android:textColor="@color/yellow_200"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/actors"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productionYear"
        app:layout_constraintVertical_bias="0.225" />

    <TextView
        android:id="@+id/actors"
        android:layout_width="209dp"
        android:layout_height="71dp"
        android:text="@string/actors"
        android:layout_marginBottom="20dp"
        android:textColor="@color/yellow_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/producers"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/duration" />

    <TextView
        android:id="@+id/producers"
        android:layout_width="186dp"
        android:layout_height="73dp"
        android:layout_marginTop="10dp"
        android:text="@string/producer"
        android:textColor="@color/yellow_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.657"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actors" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="58dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/movieAgeLimit"
        app:layout_constraintEnd_toStartOf="@id/movie_name"
        android:layout_marginTop="30dp"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:srcCompat="@drawable/finnkino_logo" />
</androidx.constraintlayout.widget.ConstraintLayout>